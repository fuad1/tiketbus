<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BerandaFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/atas3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="KOTA TUJUAN">

    </TextView>

    <EditText
        android:id="@+id/atas4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/atas3"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:hint="Isi Kota Tujuan">

    </EditText>

    <EditText
        android:id="@+id/atas5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/atas4"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:hint="sekali jalan / atau pulang pergi">

    </EditText>

    <TextView
        android:id="@+id/atas6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/atas5"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="perjalanan">

    </TextView>

    <EditText
        android:id="@+id/atas7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/atas6"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:hint="Tanggal perjalanan">

    </EditText>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/atas7"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:text="submit" />



</RelativeLayout>